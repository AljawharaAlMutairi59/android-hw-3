<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FE1A2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Title"
        android:layout_width="348dp"
        android:layout_height="85dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="cursive"
        android:text="Grade Calculator"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#000000"
        android:textSize="40sp" />


    <Button
        android:id="@+id/Calculate"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="600dp"
        android:background="#FFFFFF"
        android:fontFamily="serif"
        android:text="Calculate"
        android:textColor="#DA9EB3"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/quizes"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="160dp"
        android:background="#E1A1BF"
        android:ems="10"
        android:hint="Quizes %15"
        android:inputType="textPersonName"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/Homework"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="270dp"
        android:background="#E1A1BF "
        android:ems="10"
        android:hint="Homework %25"
        android:inputType="textPersonName"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/MidTerms"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="380dp"
        android:background="#E1A1BF"
        android:ems="10"
        android:hint="Mid Terms %30"
        android:inputType="textPersonName"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/Final"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="490dp"
        android:background="#E1A1BF"
        android:ems="10"
        android:hint="Final %30"
        android:inputType="textPersonName"
        android:textSize="23sp" />

</RelativeLayout>